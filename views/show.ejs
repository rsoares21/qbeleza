
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Q Beleza!</title>
</head>
<body>

<h2>Lista de Serviços<h2>
    <table border="1">
        <thead>
            <tr>
                <td>Nome</td>
                <td>Descrição</td>
                <td>Preço</td>
            </tr>
        </thead>
        <tbody>
        <% servicos.forEach(function(details) { %>
            <tr>
                <td><%= details.nome %></td>
                <td><%= details.descricao %></td>
                <td><%= details.preco %></td>
                <td><a href="/edit/<%= details._id %>">Editar</a> - <a href="/delete/<%= details._id %>">Deletar</a></td>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <button><a href="/">+ Novo Serviço</a></button>
</body>
</html>
